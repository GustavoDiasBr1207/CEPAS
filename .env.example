# Configuração para Oracle Cloud Always Free (1GB RAM)

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🗄️  BANCO DE DADOS ORACLE
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
DB_USER=ADMIN
DB_PASSWORD=CepasDatabase@2025
DB_CONNECT_STRING=cepasdb_high

# Pool de Conexões (OTIMIZADO PARA 1GB RAM)
DB_POOL_MIN=1
DB_POOL_MAX=3
DB_POOL_INCREMENT=1
DB_POOL_TIMEOUT=30

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🚀 SERVIDOR
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
PORT=3001
NODE_ENV=production

# Otimização de memória Node.js
NODE_OPTIONS=--max-old-space-size=256

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🔐 AUTENTICAÇÃO JWT
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
JWT_SECRET=TROQUE_ESTA_CHAVE_EM_PRODUCAO_USE_UMA_STRING_LONGA_E_ALEATORIA
JWT_EXPIRES_IN=8h
REFRESH_TOKEN_EXPIRES_IN=7d

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🌐 FRONTEND (ajuste para seu IP público)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
FRONTEND_URL=http://localhost:3000

# Para Oracle Cloud, substitua por:
# FRONTEND_URL=http://SEU_IP_PUBLICO:3000
